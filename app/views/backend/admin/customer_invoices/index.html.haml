%ol.breadcrumb.bc-3
  %li
    %a{:href => "#{admin_dashboard_path}"}
      %i.fa-home>
      Home
  %li.active
    %a{:href => "#{admin_customer_invoices_path}"} Customer Invoices
.row
  .col-md-6.col-sm-6
    %h2 Customer Invoices
.row
  .col-md-6.col-sm-6
    = link_to  new_admin_customer_invoice_path , remote: true , class: 'btn btn-md btn-primary btn-icon icon-left pull-left', style: 'margin-top: 15px !important;' do
      %i.entypo-plus
      New Invoice
  -#.col-md-6.col-sm-6
    .search-form-contaner
      = search_form_for @search , url: search_admin_customers_path , method: :post , class: 'search-form-full' do |f|
        .form-group
          = f.text_field :id_cont, class: "form-control", placeholder: "Search..."
          %i.entypo-search
  %br
  %br
  %hr
  .line
  .col-md-12
    %table.table.table-responsive.image-table#invoice_table
      %thead
        %tr
          %th NAME
          %th Invoicing Month
          %th Issue Date
          %th Due Date
          %th Total
          %th.text-center Actions
      %tbody
        - @invoices.each do |invoice|
          = invoice.row
        = render_pagination @invoices
