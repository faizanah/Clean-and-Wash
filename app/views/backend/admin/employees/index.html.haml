%ol.breadcrumb.bc-3
  %li
    %a{:href => "#{admin_dashboard_path}"}
      %i.fa-home>
      Home
  %li.active
    %a{:href => "#{admin_employees_path}"} Employees
.row
  .col-md-6.col-sm-7
    %h2 Employees
  %br/
  %br/
  .col-md-6.col-sm-5{style: 'margin-top: 20px;'}
  .container{:style => "margin-top:50px"}
    %div{:style => "margin:7px"}
      .col-xs-9
        %a#add-note.btn.btn-primary.btn-lg.btn-icon.icon-left.pull-left{href: "#{new_admin_employee_path}"}
          %i.entypo-user-add
          New Employee

      .col-xs-3.pull-right.form-group
        -#%input.form-control{:placeholder => "Search", :style => "border-radius:0px", :type => "text"}/
        %form.search-form-full{:method => "get", :role => "form"}
          .form-group
            %input#search-input.form-control{:name => "s", :placeholder => "Search...", :type => "text"}/
            %i.entypo-search

    .panel-body{:style => "padding:2px;margin-top: 30px;"}
      %table.table.table-hover
        %thead
          %tr
            %th Name
            %th Telephone
            %th Address(s)
            -#%th Role
            %th Rate per Hour
            %th Actions
        %tbody
        - @employees.each do |employee|
          %tr
            %td
              .col-md-3
                = image_tag employee.image ,width: '80px', class: 'img-round'
              .col-md-3{style:'position: absolute; left: 40px;'}
              %br
                %ul.user-details
                  %ul
                    %a{:href => "#"}
                      %i.entypo-user
                      = employee.full_name
                  %ul
                    %a{:href => "#"}
                      %i.entypo-mail
                      = employee.email
            %td
              = employee.phone
            %td
              = employee.full_address

            -#%td
            -#  = employee.role
            %td
              = employee.hourly_rate
            %td
              = link_to 'Edit', edit_admin_employee_path(employee.id),class: 'btn btn-primary'
              =link_to 'Delete',admin_employee_path(employee), class: 'btn btn-primary',:method => :delete, data: {:confirm => "Are you sure?"}

  %nav.text-center-xs
    %center
      = will_paginate @employees,:page_links => false, renderer: BootstrapPagination::Rails