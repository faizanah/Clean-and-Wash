        .profile-buttons
          %a.btn.btn-default{:href => "#"}
            %i.entypo-user-add
            Follow
          %a.btn.btn-default{:href => "#"}
            %i.entypo-mail
    %section.profile-info-tabs
      .row
        .col-sm-offset-2.col-sm-10
          %ul.user-details
            %li
              %a{:href => "#"}
                %i.entypo-location
                = @employee.full_address
            %li
              %a{:href => "#"}
                %i.entypo-suitcase
                Works as
                %span= @employee.role
            %li
              %a{:href => "#"}
                %i.entypo-calendar
                = @employee.created_at.strftime('%d %B')
          %ul.nav.nav-tabs
            %li.active
              %a{:href => "#profile-info"} Profile
            %li
              %a{:href => "#biography"} Bio
            %li
              %a{:href => "#profile-edit"} Edit Profile
