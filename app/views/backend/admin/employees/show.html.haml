.row
  .profile-env
    %header.row
      .col-sm-2
        %a.profile-picture{:href => "#"}
          = image_tag @employee.image , class: 'img-responsive img-circle'
      .col-sm-7
        %ul.profile-info-sections
          %li
            .profile-name
              %strong
                %a{:href => "#"}= @employee.full_name
