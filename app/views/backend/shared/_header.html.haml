.row
  / Profile Info and Notifications
  .col-md-6.col-sm-8.clearfix
    %ul.user-info.pull-left.pull-none-xsm
      / Profile Info
      %li.profile-info.dropdown
        / add class "pull-right" if you want to place this from right
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          = image_tag(current_user.image ,width:'44',class:'img img-circle')
          = current_user.email
        -#%ul.dropdown-menu
          / Reverse Caret
          %li.caret
          / Profile sub-links
          %li
            %a{:href => "extra-timeline.html"}
              %i.entypo-user
              Edit Profile
          %li
            %a{:href => "mailbox.html"}
              %i.entypo-mail
              Inbox
          %li
            %a{:href => "extra-calendar.html"}
              %i.entypo-calendar
              Calendar
          %li
            %a{:href => "#"}
              %i.entypo-clipboard
              Tasks
    -#%ul.user-info.pull-left.pull-right-xs.pull-none-xsm
      / Raw Notifications
      %li.notifications.dropdown
        %a.dropdown-toggle{"data-close-others" => "true", "data-hover" => "dropdown", "data-toggle" => "dropdown", :href => "#"}
          %i.entypo-attention
          %span.badge.badge-info 6
        %ul.dropdown-menu
          %li.top
            %p.small
              %a.pull-right{:href => "#"} Mark all Read
              You have
              %strong 3
              new notifications.
          %li
            %ul.dropdown-menu-list.scroller
              %li.unread.notification-success
                %a{:href => "#"}
                  %i.entypo-user-add.pull-right
                  %span.line
                    %strong New user registered
                  %span.line.small
                    30 seconds ago
              %li.unread.notification-secondary
                %a{:href => "#"}
                  %i.entypo-heart.pull-right
                  %span.line
                    %strong Someone special liked this
                  %span.line.small
                    2 minutes ago
              %li.notification-primary
                %a{:href => "#"}
                  %i.entypo-user.pull-right
                  %span.line
                    %strong Privacy settings have been changed
                  %span.line.small
                    3 hours ago
              %li.notification-danger
                %a{:href => "#"}
                  %i.entypo-cancel-circled.pull-right
                  %span.line
                    John cancelled the event
                  %span.line.small
                    9 hours ago
              %li.notification-info
                %a{:href => "#"}
                  %i.entypo-info.pull-right
                  %span.line
                    The server is status is stable
                  %span.line.small
                    yesterday at 10:30am
              %li.notification-warning
                %a{:href => "#"}
                  %i.entypo-rss.pull-right
                  %span.line
                    New comments waiting approval
                  %span.line.small
                    last week
          %li.external
            %a{:href => "#"} View all notifications
