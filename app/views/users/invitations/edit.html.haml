  .form-register-success
    %i.entypo-check
    %h3 You have been successfully registered.
    %p We have emailed you the confirmation link for your account.
  .form-steps
    #step-1.step.current
      -#.form-group
        .input-group
          .input-group-addon
            %i.entypo-user
          = f.text_field :first_name , class: 'form-control' , placeholder: "Your first name" , autocomplete: "off"
      -#.form-group
        .input-group
          .input-group-addon
            %i.entypo-user
          = f.text_field :last_name , class: 'form-control' , placeholder: "Your first name" , autocomplete: "off"
      .form-group
        .input-group
          .input-group-addon
            %i.entypo-lock
          = f.password_field :password , class: 'form-control' , placeholder: "Password" , autocomplete: "off"
      .form-group
        .input-group
          .input-group-addon
            %i.entypo-lock
          = f.password_field :password_confirmation , class: 'form-control' , placeholder: "Confirm Password" , autocomplete: "off"
      .form-group
        = f.button raw("<i class='entypo-right-open-mini'></i>Complete Onboarding"), class: 'btn btn-success btn-block btn-login'

      -#.form-group
        .input-group
          .input-group-addon
            %i.entypo-phone
          = f.text_field :phone , class: 'form-control' , placeholder: "Phone Number" , autocomplete: "off" , data:{"mask": "phone"}
      -#.form-group
        .input-group
          .input-group-addon
            %i.entypo-calendar
          = f.text_field :phone , class: 'form-control' , placeholder: "Date of Birth (DD/MM/YYYY)" , autocomplete: "off" , data:{"mask": "date"}
      -#.form-group
        %button.btn.btn-primary.btn-block.btn-login{"data-step" => "step-2", :type => "button"}
          %i.entypo-right-open-mini
          Next Step
      -#.form-group
        Step 1 of 2
    -##step-2.step
      .form-group
        .input-group
          .input-group-addon
            %i.entypo-user-add
          %input#username.form-control{:autocomplete => "off", "data-is-regex" => "true", "data-mask" => "[a-zA-Z0-1\\.]+", :name => "username", :placeholder => "Username", :type => "text"}/
      .form-group
        .input-group
          .input-group-addon
            %i.entypo-mail
          %input#email.form-control{:autocomplete => "off", "data-mask" => "email", :name => "email", :placeholder => "E-mail", :type => "text"}/
      .form-group
        .input-group
          .input-group-addon
            %i.entypo-lock
          %input#password.form-control{:autocomplete => "off", :name => "password", :placeholder => "Choose Password", :type => "password"}/
      .form-group
        %button.btn.btn-success.btn-block.btn-login{:type => "submit"}
          %i.entypo-right-open-mini
          Complete Registration
      .form-group
        Step 2 of 2
-#.login-bottom-links
  %a.link{:href =>"#{new_user_session_path}"}
    %i.entypo-lock
    Return to Login Page
